@using Fiorello.Areas.Admin.ViewModels.SliderVM
@model CreateSliderVM

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Category</h4>

            <form asp-area="Admin" asp-controller="Slider" asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Photo">Slider Photo</label>
                    <input asp-for="Photo" class="form-control" />
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success btn-rounded btn-fw">Save</button>
                <a asp-action="Index" class="btn btn-secondary btn-rounded btn-fw">Back</a>
            </form>
        </div>
    </div>
</div>